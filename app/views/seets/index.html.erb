<h1>ベスト5</h1>

 <% @seets.each.with_index(1) do |seet, idx| %>

  <div><%= idx %></div>

  <div><%= seet.shop_name %></div>

  <div><%= attachment_image_tag seet, :image, :fill, 500, 500, format: 'jpeg' %></div>

  <div><%= seet.caption %></div>

  <div><%= raw Rinku.auto_link(h(seet.rinku)) %></div>

  <% end %>